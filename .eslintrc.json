{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:svelte/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["svelte", "prettier"],
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "processor": "svelte/svelte"
    }
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}
